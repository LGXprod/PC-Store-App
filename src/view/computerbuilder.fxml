<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="10" fx:controller="controller.ComputerBuilderController">

    <stylesheets>
        <URL value="@computerbuilder.css"/>
    </stylesheets>

    <ImageView fitHeight="360" fitWidth="480">
        <image>
            <Image url="@parts.jpg"/>
        </image>
    </ImageView>
    
    <Label text="Computer Builder" styleClass="h1"/>
    
    <HBox spacing="10" alignment="center" >
        <Button text="${'View\nCatalogue'}" styleClass="largeButton" onAction="#handleViewCatalogue"/>
        <Button text="${'View\nBuild'}" styleClass="largeButton" onAction="#handleViewBuild"/>
    </HBox>
    
    <Button text="Quit" styleClass="button" onAction="#handleQuit"/>

</VBox>
